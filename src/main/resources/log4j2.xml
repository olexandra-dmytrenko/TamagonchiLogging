<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <!-- Define custom levels before using them for filtering below. -->
    <CustomLevels>
        <CustomLevel name="CUSTOMER" intLevel="250" />
        <CustomLevel name="DIAG" intLevel="350" />
        <CustomLevel name="VERBOSE" intLevel="550" />
    </CustomLevels>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[LOG]  %d %-8p [%t] %c - %msg%n"/>
        </Console>
        <File name="MyFile" fileName="logs/log4j2Log.log">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-10level %logger{36} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="trace">
            <!-- Only events at DIAG level or more specific are sent to the console. -->
            <AppenderRef ref="Console" level="diag" />
            <AppenderRef ref="MyFile" level="trace" />
        </Root>
    </Loggers>
</Configuration>